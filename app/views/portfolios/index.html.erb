<h1>Portfolio items</h1>
<!--<a href="portfolios/new">Create a new portfolio</a>-->

<%= link_to "Create a new portfolio", new_portfolio_path %>

<% @portfolio_items.each do |potrfolio| %>
  <p><%= potrfolio.title %></p>
  <p><%= potrfolio.subtitle %></p>
  <p><%= potrfolio.body %></p>
  <%= image_tag(potrfolio.thumb_image) if potrfolio.thumb_image %>
  <%= link_to "Edit", edit_portfolio_path(potrfolio.id) %>

<% end %>
